<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.OrderActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:id="@+id/cv_item"
        app:cardBackgroundColor="@color/colorBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_card"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_margin="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/img_product"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorPrimaryDark" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:text="Cetak Brosur"
                android:textColor="@color/colorText"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_card"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Rp 12.000"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toEndOf="@+id/img_card"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cv_item">
        <ImageView
            android:id="@+id/btn_decrease"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_decrease_circle"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/edt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="1"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/poppins_bold"
            tools:text="123"/>
        <ImageView
            android:id="@+id/btn_increase"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_increase_circle"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Upload File"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/colorText"
        android:textSize="15sp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edt_upload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="max 10mb (psd/cdr/jpg/png/rar/zip)"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:fontFamily="@font/poppins"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/upload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_upload"/>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Upload"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_upload"
        app:layout_constraintBottom_toBottomOf="@+id/edt_upload"/>

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Catatan"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/colorText"
        android:textSize="15sp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_upload"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edt_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Tulis pesan... (optional)"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:fontFamily="@font/poppins"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_notes"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="24dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Rumah"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukkan alamat lengkap..."
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorText"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address"/>
            <TextView
                android:id="@+id/tv_courier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expedisi..."
                android:layout_marginTop="4dp"
                android:layout_below="@+id/tv_address"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorText"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_address"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimasi pengiriman..."
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorText"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_courier"/>
            <View
                android:id="@+id/hv"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginEnd="18dp"
                android:background="@color/colorText"
                app:layout_constraintEnd_toStartOf="@+id/right_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/right_circle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right_circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_nav">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total bayar"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorText"
                android:layout_marginTop="12dp"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp 20000"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@+id/total"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/btn_bayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn"
                android:text="Bayar"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>